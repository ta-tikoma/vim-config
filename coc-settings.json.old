{
    "diagnostic.errorSign": "!",
    "diagnostic.warningSign": "?",
    "diagnostic.infoSign": "*",
    "diagnostic.hintSign": "~",
    
    "coc.preferences.formatOnSaveFiletypes": ["php"],

    "psalm.psalmScriptPath": "/home/ni_shi/.config/composer/vendor/bin/psalm-language-server",
    "psalm.psalmClientScriptPath": "/home/ni_shi/.config/composer/vendor/bin/psalm",
    "psalm.disableCompletion": true,

    "explorer.git.enable": false,
    "explorer.openAction.relativePath": true,
    "explorer.previewAction.onHover": false,
    "explorer.position": "right",
    "explorer.width": 70,
    "explorer.file.hiddenRules": {
        "patternMatches": [
            "^\\.git",
            "^\\.idea"
        ]
    },
    "explorer.quitOnOpen": true,
    "explorer.filename.colored.enable": false,

    "translator.toLang": "en",
    "translator.engines": [
        "google"
    ],

    "cSpellExt.enableDictionaries": ["russian"],
    "cSpell.language": "en,ru",
    "cSpell.enabledLanguageIds": [
        "php"
    ],
    "cSpell.showCommandsInEditorContextMenu": false
}
