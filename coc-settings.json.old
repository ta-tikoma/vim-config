{
    "languageserver": {
        "psalmls": {
            "command": "/home/ni_shi/.config/composer/vendor/bin/psalm-language-server",
            "filetypes": ["php"],
            "rootPatterns": ["psalm.xml", "psalm.xml.dist"],
            "requireRootPattern": true
        }
    },

    "explorer.openAction.relativePath": true,
    "explorer.previewAction.onHover": false,
    "explorer.position": "right",
    "explorer.width": 100,
    "explorer.file.hiddenRules": {
        "patternMatches": [
            "^\\.git",
            "^\\.idea"
        ]
    },
    "explorer.quitOnOpen": true,
    "explorer.filename.colored.enable": false,

    "translator.toLang": "en",
    "translator.engines": [
        "google"
    ],

    "coc.preferences.formatOnSaveFiletypes": ["php"],

    "diagnostic-languageserver.filetypes": {
        "php": ["phpcs"]
    },
    "diagnostic-languageserver.linters": {
        "phpcs": {
            "command": "/home/ni_shi/.config/composer/vendor/bin/phpcs",
            "debounce": 100,
            "rootPatterns": [ "composer.json", "composer.lock", "vendor", ".git" ],
            "args": [ "--standard=PSR2,PSR1", "--report=emacs", "-s", "-" ],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "phpcs",
            "formatLines": 1,
            "formatPattern": [
                "^.*:(\\d+):(\\d+):\\s+(.*)\\s+-\\s+(.*)(\\r|\\n)*$",
                {
                    "line": 1,
                    "column": 2,
                    "message": 4,
                    "security": 3
                }
            ],
            "securities": {
                "error": "error",
                "warning": "warning"
            }
        }
    },
    "diagnostic-languageserver.formatFiletypes": {
        "php": "phpcbf"
    },
    "diagnostic-languageserver.formatters": {
        "phpcbf": {
            "command": "./vendor/bin/phpcbf",
            "rootPatterns": ["composer.json", "composer.lock", "vendor", ".git"],
            "args": ["--standard=PSR2,PSR1", "%file"],
            "isStdout": false,
            "doesWriteToFile": true
        }
    },

    "cSpellExt.enableDictionaries": ["russian"],
    "cSpell.language": "en,ru",
    "cSpell.enabledLanguageIds": [
        "php"
    ]
}
